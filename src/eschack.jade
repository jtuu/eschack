- var env = "dev"
doctype
html
	title eschack
	meta(charset="utf-8")
	link(rel="stylesheet" href="dist/eschack.css" type="text/css")
	link(rel="stylesheet" href="dist/ui.css" type="text/css")
	
	body
		.column#column-left
			#canvas-container
				#loader
					- for(var i = 0; i < 9; i++){
						.loader-block
					- }
				canvas#canvas-second
				canvas#canvas-main
			#logbox
			#bottom-row
				#settings
					button#button-save save
					button#button-delete delete
					hr
					h4 Controls
					p Use numpad or wasd to move.
					p num5: rest a turn
					p g: pick up item
					hr
					a.github-button(data-count-api="/repos/jtuu/eschack#subscribers_count" data-count-href="jtuu/eschack/watchers" data-style="mega" data-icon="octicon-eye" href="https://github.com/jtuu/eschack/") Watch
					script#github-bjs(async defer src="https://buttons.github.io/buttons.js")
				#todo
					h3 TODO
					ul
						each val in todo
							li=	 val
		.column#column-right
			.info-container.moveable.resizeable#info-container-player
			#info-container-other-life-wrap.moveable.resizeable
				strong Enemies
				.info-container#info-container-other-life
			.info-container.moveable.resizeable#info-container-other-misc
				strong Examine
			.info-container.moveable.resizeable#info-container-inventory
				strong Inventory


		script(src="https://rawgit.com/pieroxy/lz-string/master/libs/lz-string.min.js")
		if(env === "dev")
			script(src="src/eschack.js")
		else
			script(src="dist/eschack.min.js")
		script(src="dist/ui.js")