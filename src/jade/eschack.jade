				h3 TODO
				.content
					ul
						each val in todo
							li=	 val


		script(src="https://rawgit.com/pieroxy/lz-string/master/libs/lz-string.min.js")
		if(env === "dev")
			script(src="misc/eschack.js")
		else
			script(src="dist/eschack.min.js")
